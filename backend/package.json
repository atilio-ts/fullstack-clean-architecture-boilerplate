{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsup src/server.ts --format cjs --clean",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "test": "cross-env TS_NODE_PROJECT=tsconfig.test.json nyc mocha",
    "test:watch": "cross-env TS_NODE_PROJECT=tsconfig.test.json mocha --watch",
    "test:coverage": "nyc report --reporter=html --reporter=text",
    "test:architecture": "cross-env TS_NODE_PROJECT=tsconfig.test.json mocha tests/architecture/**/*.test.ts",
    "test:unit": "cross-env TS_NODE_PROJECT=tsconfig.test.json mocha tests/unit/**/*.test.ts",
    "test:integration": "cross-env TS_NODE_PROJECT=tsconfig.test.json mocha tests/integration/**/*.test.ts",
    "test:all": "npm run test:architecture && npm run test:unit && npm run test:integration",
    "docker:build": "docker build -t atilio-backend .",
    "docker:run": "docker run -p 3001:3000 atilio-backend",
    "db:migrate": "docker run --rm -v \"$(pwd)/../database/migrations:/flyway/sql\" -v \"$(pwd)/../database/conf:/flyway/conf\" flyway/flyway:10-alpine -url=jdbc:postgresql://localhost:5432/atilio_db -user=postgres -password=postgres migrate",
    "db:info": "docker run --rm -v \"$(pwd)/../database/migrations:/flyway/sql\" -v \"$(pwd)/../database/conf:/flyway/conf\" flyway/flyway:10-alpine -url=jdbc:postgresql://localhost:5432/atilio_db -user=postgres -password=postgres info",
    "db:validate": "docker run --rm -v \"$(pwd)/../database/migrations:/flyway/sql\" -v \"$(pwd)/../database/conf:/flyway/conf\" flyway/flyway:10-alpine -url=jdbc:postgresql://localhost:5432/atilio_db -user=postgres -password=postgres validate",
    "tsoa:spec": "tsoa spec",
    "tsoa:routes": "tsoa routes",
    "build:swagger": "npm run tsoa:spec && npm run tsoa:routes",
    "generate:client": "swagger-typescript-api generate -p build/swagger.json -o ../frontend/src/api/generated -n api-client.ts --axios --module-name-first-tag --enum-names-as-values",
    "build:client": "npm run build:swagger && npm run generate:client",
    "prebuild": "npm run build:swagger"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "^8.13.1",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^5.0.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.11.10",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "chai": "^5.1.2",
    "cross-env": "^7.0.3",
    "mocha": "^11.0.1",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0",
    "sinon": "^19.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "swagger-typescript-api": "^13.2.9",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
